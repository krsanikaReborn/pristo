{% extends 'PristoFrontBundle::layout.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
<h1>PICker 회원가입</h1>

{{form_start(form)}}

    <table>
        <tr>
            <td style="vertical-align: top;">
                이메일<br>
                비밀번호<br>
                비밀번호 재입력<br>
                닉네임<br>
            </td>            
            <td>
                {{form_widget(form.email)}}{{form_errors(form.email)}}<br>                
