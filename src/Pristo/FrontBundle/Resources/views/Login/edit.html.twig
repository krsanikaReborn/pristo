                <input name="repass" type="password"><br>
                {{form_widget(form.nick)}}{{form_errors(form.nick)}}<br>
                
            </td>
        </tr>
        <tr>            
    </table>            
            <input id="editSubmit" type="button" value="확인메일을 전송" onclick="Edit.inputCheck()">
            {{ form_widget(form) }}
{{form_end(form)}}

<div>
    <a href="{{ path('login') }}">로그인 화면으로 돌아가기</a>
</div>

<script>
    
var Edit = {        
    inputCheck : function(){
        var pass = $("input[name='form[password]']").val();
        var repass = $("input[name='repass']").val();

        if(pass != repass ) alert("비밀번호가 다릅니다!");
        else $("form").submit();
    }
    
}


</script>    

{% endblock %}

